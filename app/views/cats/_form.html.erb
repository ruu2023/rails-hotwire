<%# bootstrap_form を使ったフォームでは、form_with の代わりに bootstrap_form_with を使う %>
<%# バリデーションエラーの表示は bootstrap_form が用意してくれるので、自前で用意する必要がなくなる %>
<%= turbo_frame_tag cat do %>
  <%= bootstrap_form_with(model: cat) do |form| %>
    <div class="row py-2 border-top">
      <div class="col-4">

        <%# ラベルは bootstrap_form が用意してくれるので、自前で用意する必要がなくなる %>
        <%# Bootstrap の clas 属性も bootstrap_form が設定してくれるので、自前で用意する必要はない %>
        <%= form.text_field :name,
                          skip_label: true,
                          label_as_placeholder: true,
                          wrapper: false,
                          control_class: "form-control form-control-sm" %>
      </div>
      <div class="col-4">
        <%= form.number_field :age,
                          skip_label: true,
                          label_as_placeholder: true,
                          wrapper: false,
                          control_class: "form-control form-control-sm" %>
      </div>
      <div class="col-4">
        <div class="d-flex justify-content-end">
          <%= form.primary class: "btn btn-primary btn-sm me-2" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
